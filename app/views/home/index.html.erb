<h1>Customer Management</h1>

<%= button_to "Add New Customer", new_user_path, method: :get, class: "btn btn-primary" %>

<h2>Customers</h2>
<% @users.each do |user| %>
  <p>
    <strong><%= link_to "#{user.first_name} #{user.last_name}", user_path(user) %></strong>
    <%= link_to "Place Order", new_user_order_path(user), class: "btn btn-secondary" %>
  </p>
<% end %>
